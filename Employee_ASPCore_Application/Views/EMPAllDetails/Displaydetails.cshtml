@model Employee_ASPCore_Application.Models.Employee
@using (Html.BeginForm("Displaydetails", "EMPAllDetails", new { id = Model.eid }, FormMethod.Get))
{
    @Html.HiddenFor(model => model.eid)
    <div class="form-group">
        <label class="control-label">Employee Name  :</label>
            <span style="color: #FF5733;">@Html.DisplayFor(Model => Model.ename)</span>
    </div>
    <div class="form-group">
        <label class="control-label">Employee Age   :</label>
            <span style="color: #FF5733;">@Html.DisplayFor(Model => Model.eage)</span>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "AllProfile_page", "EMPAllDetails")
</div>