@model IEnumerable<Employee_ASPCore_Application.Models.Employee>
<div>
    @Html.ActionLink("Insert Employee details", "Insert_Load", "EMPInsert")
</div>
<h2>List All Employee Details</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<table class="table">
    <thead>
        <tr>
         @*    <th>Id</th> *@
            <th>Name</th>
            <th>Age</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)

        {
            <tr>
              @*   <td>@emp.eid</td> *@
                <td>@emp.ename</td>
                <td>@emp.eage</td>
               

                <td>
                    @using (Html.BeginForm("Deletetab", "EMPAllDetails",
                   new { id = emp.eid }, FormMethod.Post))
                    {
                        <button class="btn btn-success btn-xs"
                                type="submit">
                            Delete
                        </button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Edittab", "EMPAllDetails",
                   new { id = emp.eid }, FormMethod.Post))
                    {
                        <button class="btn btn-success btn-xs"
                                type="submit">
                            Edit
                        </button>
                    }
                </td>
                <td>
                    @using (Html.BeginForm("Displaydetails", "EMPAllDetails",
                   new { id = emp.eid }, FormMethod.Post))
                    {
                        <button class="btn btn-success btn-xs"
                                type="submit">
                            Details
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>